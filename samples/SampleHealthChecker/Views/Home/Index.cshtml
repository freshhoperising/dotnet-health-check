@model CompositeHealthCheckResult
@{
    ViewData["Title"] = "Home Page";
}

<div>
    <h1>Overall status: <em>@Model.CheckStatus</em></h1>

    <br />

    <table class="table">
        <thead>
            <tr><td>Name</td><td>Status</td><td>Description</td>
        </thead>
        <tbody>
            @foreach (var kvp in Model.Results)
            {
                <tr><td>@kvp.Key</td><td>@kvp.Value.CheckStatus</td><td>@kvp.Value.Description</td></tr>
            }
        </tbody>
    </table>
</div>
